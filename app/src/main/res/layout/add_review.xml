<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/etTitle"
            android:layout_toRightOf="@id/tvDogName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_weight="1"/>
        <EditText
            android:layout_toRightOf="@id/tvContent"
            android:id="@+id/etContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tvDogAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <EditText
            android:layout_toRightOf="@id/tvDogAge"
            android:id="@+id/etDogAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tvDogPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포토"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <EditText
            android:layout_toRightOf="@id/tvDogPhoto"
            android:id="@+id/etDogPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="5"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/img_view2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_phview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="업로드"/>


        <Button
            android:id="@+id/btn_confirm_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="추가"/>
    </LinearLayout>


</LinearLayout>